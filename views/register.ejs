<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script> -->
    <link href="/styleRegister/style.css" type="text/css" rel="stylesheet">
    <style>
        #secretKeyBox{
            display: none;
            opacity: 0;
            transition: opacity .3s ease;
        }
        #secretKeyBox.visible {
            display: block;
            opacity: 1; /* Hiển thị với độ trong suốt là 1 */
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="container">
        <form action="/register" method="post">
            
            <% if (messages.error) { %>
                <div class="alert alert-danger">
                  <strong><%= messages.error %> </strong>
                </div>
            <% } %> 

            <h1>Sign Up</h1>

            <h3>Sign up as: </h3>
            <div class="chooseTypeRegister">
                <label><input type="radio" name="options" class="checkbox" id="radio1" value="User" checked>User</label>
                <label><input type="radio" name="options" class="checkbox" id="radio2" value="Admin">Admin</label>
            </div>
            <div class="input_box">
                <input type="text" placeholder="Tên đăng nhập" name="username" id="inputName"><i class="fas fa-user"></i>
            </div>

            <div class="input_box">
                <input type="email" placeholder="Email" name="email" id="inputEmail"><i class="fa fa-envelope"></i>
            </div>

            <div class="input_box">
                <input type="password" placeholder="Mật khẩu" name="password" id="inputPassword"><i class="fas fa-lock"></i>
            </div>

            <div class="input_box" id="secretKeyBox"> 
                <input type="text" placeholder="Secret Key" name="secretkey" id="inputSecretKey"><i class="fa fa-user-secret"></i>
            </div>

            <button type="submit" class="btn">Đăng kí</button>
            
            <div class="login_link">
                <p>Đã có tài khoản? <a href="/login">Đăng nhập</a></p>
            </div>
        </form>
    </div>
<script>
    var radioUser = document.getElementById("radio1");
    var radioAdmin = document.getElementById("radio2");
    var secretKeyBox = document.getElementById("secretKeyBox");

    // Bắt sự kiện thay đổi radio button
    radioUser.addEventListener("change", function() {
        if (radioUser.checked) {
            secretKeyBox.classList.remove('visible'); // Ẩn phần input box cho secret key khi chọn user
        }
    });

    radioAdmin.addEventListener("change", function() {
        if (radioAdmin.checked) {
            secretKeyBox.classList.add('visible'); // Hiện phần input box cho secret key khi chọn admin
        }
    });

</script>
</body>
</html>